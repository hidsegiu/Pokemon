@model PokemonCreateVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Pokemon</h1>

<hr />
<div class="row">
    <div class="col-6 pt-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NacionalPokedexNumber" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NacionalPokedexNumber" class="form-control" />
                    <span asp-validation-for="NacionalPokedexNumber" class="text-danger"></span>
                </div>
            </div>
            </br>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            </br>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Height" class="control-label"></label>

                </div>
                <div class="col-8">
                    <input asp-for="Height" class="form-control" />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
            </div>
            </br>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Weight" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
            </div>
            </br>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Category" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>
            </br>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Abilities" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Abilities" class="form-control" />
                    <span asp-validation-for="Abilities" class="text-danger"></span>
                </div>
            </div>
            </br>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            </br>
            <div class="form-group">
                @*<label asp-for="ImageUrl" class="control-label"></label>*@
                <input type="file" asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            </br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-3 offset-1 pt-4">
        <div class="form-group row"></div>
        <img src="@Model.ImageUrl" width="35%" style="border-radius:5px; border:1px solid #bbb9b9" />
        <div class="col-3 offset-1">
            <h2>#@Model.NacionalPokedexNumber</h2>
        </div>
    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

